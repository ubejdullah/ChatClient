<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChatClient">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="BaseAlt"/>
    </Window.SystemBackdrop>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" 
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,0,1,0">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Padding="20" Background="{ThemeResource AccentFillColorDefaultBrush}">
                    <StackPanel Orientation="Horizontal">
                        <PersonPicture Width="40" Height="40" DisplayName="You"/>
                        <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="ModernChat" FontWeight="SemiBold" FontSize="16" Foreground="White"/>
                            <TextBlock Text="Online" FontSize="12" Foreground="White" Opacity="0.8"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- Search Bar -->
                <AutoSuggestBox Grid.Row="1" 
                               Margin="15,15,15,10"
                               PlaceholderText="Suche Chats..."
                               QueryIcon="Find"/>

                <!-- Chat List -->
                <ScrollViewer Grid.Row="2" Padding="10,0">
                    <StackPanel x:Name="ChatList">

                        <!-- Chat Item 1 -->
                        <Border Margin="5,2" 
                                Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                CornerRadius="8"
                                Padding="15,12">
                            <Border.Resources>
                                <Storyboard x:Name="HoverStoryboard">
                                    <DoubleAnimation Storyboard.TargetName="ChatItem1"
                                                   Storyboard.TargetProperty="Opacity"
                                                   To="0.8" Duration="0:0:0.2"/>
                                </Storyboard>
                            </Border.Resources>
                            <Grid x:Name="ChatItem1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <PersonPicture Grid.Column="0" Width="32" Height="32" DisplayName="Anna Schmidt"/>

                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <TextBlock Text="Anna Schmidt" FontWeight="SemiBold" FontSize="14"/>
                                    <TextBlock Text="Hey! Wie geht's dir denn?" 
                                             FontSize="12" 
                                             Opacity="0.7"
                                             TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                    <TextBlock Text="14:32" FontSize="11" Opacity="0.6"/>
                                    <Border Background="{ThemeResource AccentFillColorDefaultBrush}"
                                            CornerRadius="10"
                                            Padding="6,2"
                                            Margin="0,4,0,0">
                                        <TextBlock Text="2" FontSize="10" Foreground="White" HorizontalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Chat Item 2 -->
                        <Border Margin="5,2" 
                                Background="Transparent"
                                CornerRadius="8"
                                Padding="15,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <PersonPicture Grid.Column="0" Width="32" Height="32" DisplayName="Team Alpha"/>

                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <TextBlock Text="Team Alpha" FontWeight="SemiBold" FontSize="14"/>
                                    <TextBlock Text="Meeting um 16:00 Uhr" 
                                             FontSize="12" 
                                             Opacity="0.7"
                                             TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2" Text="13:45" FontSize="11" Opacity="0.6" VerticalAlignment="Top"/>
                            </Grid>
                        </Border>

                        <!-- Chat Item 3 -->
                        <Border Margin="5,2" 
                                Background="Transparent"
                                CornerRadius="8"
                                Padding="15,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <PersonPicture Grid.Column="0" Width="32" Height="32" DisplayName="Max Müller"/>

                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <TextBlock Text="Max Müller" FontWeight="SemiBold" FontSize="14"/>
                                    <TextBlock Text="Perfekt! Danke dir 👍" 
                                             FontSize="12" 
                                             Opacity="0.7"
                                             TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2" Text="12:20" FontSize="11" Opacity="0.6" VerticalAlignment="Top"/>
                            </Grid>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Main Chat Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Chat Header -->
            <Border Grid.Row="0" 
                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="20,15">

                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <PersonPicture Width="36" Height="36" DisplayName="Anna Schmidt"/>
                        <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Anna Schmidt" FontWeight="SemiBold" FontSize="16"/>
                            <TextBlock Text="Zuletzt online: vor 5 Min" FontSize="12" Opacity="0.7"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Style="{StaticResource SubtleButtonStyle}" Padding="12">
                            <SymbolIcon Symbol="Phone"/>
                        </Button>
                        <Button Style="{StaticResource SubtleButtonStyle}" Padding="12" Margin="8,0,0,0">
                            <SymbolIcon Symbol="Video"/>
                        </Button>
                        <Button Style="{StaticResource SubtleButtonStyle}" Padding="12" Margin="8,0,0,0">
                            <SymbolIcon Symbol="More"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Messages Area -->
            <ScrollViewer Grid.Row="1" 
                         x:Name="MessagesScrollViewer"
                         Padding="20"
                         VerticalScrollBarVisibility="Auto">

                <StackPanel x:Name="MessagesPanel" Spacing="15">

                    <!-- Received Message -->
                    <Grid HorizontalAlignment="Left" MaxWidth="400">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <PersonPicture Grid.Column="0" Width="28" Height="28" DisplayName="Anna Schmidt" VerticalAlignment="Bottom" Margin="0,0,10,0"/>

                        <Border Grid.Column="1"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="18,18,18,4"
                                Padding="15,10">
                            <StackPanel>
                                <TextBlock Text="Hey! Wie geht's dir denn? 😊" TextWrapping="Wrap" FontSize="14"/>
                                <TextBlock Text="14:32" FontSize="11" Opacity="0.6" Margin="0,4,0,0" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Sent Message -->
                    <Grid HorizontalAlignment="Right" MaxWidth="400">
                        <Border Background="{ThemeResource AccentFillColorDefaultBrush}"
                                CornerRadius="18,18,4,18"
                                Padding="15,10">
                            <StackPanel>
                                <TextBlock Text="Hallo Anna! Mir geht's super, danke! Und dir?" 
                                         TextWrapping="Wrap" 
                                         FontSize="14" 
                                         Foreground="White"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,0" Spacing="5">
                                    <TextBlock Text="14:33" FontSize="11" Foreground="White" Opacity="0.8"/>
                                    <SymbolIcon Symbol="Accept" Foreground="White" Opacity="0.8"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Received Message -->
                    <Grid HorizontalAlignment="Left" MaxWidth="400">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <PersonPicture Grid.Column="0" Width="28" Height="28" DisplayName="Anna Schmidt" VerticalAlignment="Bottom" Margin="0,0,10,0"/>

                        <Border Grid.Column="1"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="18,18,18,4"
                                Padding="15,10">
                            <StackPanel>
                                <TextBlock Text="Mir auch! Hast du Lust heute Abend ins Kino zu gehen? Der neue Marvel Film läuft 🎬" 
                                         TextWrapping="Wrap" 
                                         FontSize="14"/>
                                <TextBlock Text="14:35" FontSize="11" Opacity="0.6" Margin="0,4,0,0" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Typing Indicator -->
                    <Grid HorizontalAlignment="Left" x:Name="TypingIndicator" Opacity="0.7">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <PersonPicture Grid.Column="0" Width="28" Height="28" DisplayName="Anna Schmidt" VerticalAlignment="Bottom" Margin="0,0,10,0"/>

                        <Border Grid.Column="1"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="18,18,18,4"
                                Padding="15,10">
                            <StackPanel Orientation="Horizontal" Spacing="3">
                                <Ellipse Width="6" Height="6" Fill="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <Ellipse Width="6" Height="6" Fill="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <Ellipse Width="6" Height="6" Fill="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                </StackPanel>
            </ScrollViewer>

            <!-- Input Area -->
            <Border Grid.Row="2" 
                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="20,15">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Style="{StaticResource SubtleButtonStyle}" Padding="12" Margin="0,0,10,0">
                        <SymbolIcon Symbol="Attach"/>
                    </Button>

                    <TextBox Grid.Column="1" 
                            x:Name="MessageTextBox"
                            PlaceholderText="Nachricht eingeben..."
                            BorderThickness="1"
                            CornerRadius="20"
                            Padding="15,10"
                            MaxHeight="100"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            KeyDown="MessageTextBox_KeyDown"/>

                    <Button Grid.Column="2" Style="{StaticResource SubtleButtonStyle}" Padding="12" Margin="10,0">
                        <SymbolIcon Symbol="Emoji"/>
                    </Button>

                    <Button Grid.Column="3" 
                            x:Name="SendButton"
                            Style="{StaticResource AccentButtonStyle}"
                            Padding="15,10"
                            CornerRadius="20"
                            Click="SendButton_Click">
                        <SymbolIcon Symbol="Send" Foreground="White"/>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>